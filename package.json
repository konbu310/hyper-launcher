{
  "name": "hyper-launcher",
  "description": "Flexible and powerful application launcher for macOS.",
  "author": "konbu310",
  "version": "0.1.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "build:prod": "NODE_ENV=production webpack",
    "build:mac": "yarn run build:prod && electron-builder",
    "prewatch": "bash ./scripts/copy-bins.sh",
    "watch": "webpack --watch",
    "start": "electron .",
    "fmt": "yarn prettier --write '**/*.{ts,tsx}'"
  },
  "dependencies": {
    "electron-store": "^6.0.1",
    "file-icon": "^4.0.0",
    "frontmost-app": "^1.0.0",
    "linaria": "^1.3.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-transition-group": "^4.4.1"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@types/react-transition-group": "^4.4.0",
    "@types/webpack": "^4.41.22",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.3.0",
    "electron": "11.x",
    "electron-builder": "^22.8.1",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.0.0",
    "prettier": "^2.1.2",
    "ts-config-webpack-plugin": "^2.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "build": {
    "productName": "Hyper Launcher",
    "appId": "com.electron.hyper-launcher",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "icons/icon.icns",
      "target": [
        "dmg"
      ]
    }
  }
}
