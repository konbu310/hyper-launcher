{
  "name": "hyper-launcher",
  "description": "Flexible and powerful application launcher for macOS.",
  "author": "konbu310",
  "version": "0.1.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "build:prod": "NODE_ENV=production webpack",
    "build:mac": "yarn run build:prod && electron-builder",
    "watch": "webpack --watch",
    "start": "electron .",
    "fmt": "yarn prettier --write '**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@jxa/run": "^1.3.4",
    "electron-store": "^8.0.0",
    "extract-file-icon": "^0.3.2",
    "goober": "^2.0.37",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-transition-group": "^4.4.1"
  },
  "devDependencies": {
    "@jxa/global-type": "^1.3.4",
    "@jxa/types": "^1.3.4",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-transition-group": "^4.4.1",
    "@types/webpack": "^5.28.0",
    "electron": "^12.0.6",
    "electron-builder": "^22.10.5",
    "html-webpack-plugin": "^5.3.1",
    "node-loader": "^2.0.0",
    "prettier": "^2.2.1",
    "ts-loader": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0"
  },
  "build": {
    "productName": "Hyper Launcher",
    "appId": "com.electron.hyper-launcher",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "icons/icon.icns",
      "target": [
        "dmg"
      ]
    }
  }
}
