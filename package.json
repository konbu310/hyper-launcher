{
  "name": "hyper-launcher",
  "description": "Flexible and powerful application launcher for macOS.",
  "author": "konbu310",
  "version": "1.2.0",
  "main": "dist/main/main.js",
  "license": "MIT",
  "scripts": {
    "rimraf": "rimraf",
    "start": "electron .",
    "dev": "npm run watch:renderer",
    "watch": "npm-run-all 'rimraf dist' --parallel watch:* start",
    "watch:main": "node scripts/build.mjs -w",
    "watch:renderer": "vite dev",
    "build": "npm-run-all --parallel 'rimraf dist' 'rimraf build' --parallel build:*",
    "build:main": "node scripts/build.mjs -p",
    "build:renderer": "NODE_ENV=production vite build",
    "prepack": "npm run build",
    "pack": "node scripts/pack.mjs",
    "fmt": "prettier --write '**/*.{ts,tsx}'",
    "tauri": "tauri"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.2.0",
    "css.gg": "^2.0.0",
    "electron-store": "^8.1.0",
    "extract-file-icon": "^0.3.2",
    "immutability-helper": "^3.1.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.2.2",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-beautiful-dnd": "^13.1.3",
    "@types/react-dom": "^18.0.10",
    "@vanilla-extract/css": "^1.9.2",
    "@vanilla-extract/vite-plugin": "^3.7.0",
    "@vitejs/plugin-react": "2.x.x",
    "commander": "^9.4.1",
    "electron": "^22.0.0",
    "electron-packager": "^17.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.16.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rome": "^11.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "3.x.x"
  }
}
