{
  "name": "hyper-launcher",
  "productName": "Hyper Launcher",
  "description": "Flexible and powerful application launcher for macOS.",
  "author": "konbu310",
  "version": "1.2.0",
  "main": "dist/main/main.js",
  "license": "MIT",
  "scripts": {
    "rimraf": "rimraf",
    "start": "electron .",
    "watch": "npm-run-all 'rimraf dist' --parallel watch:* start",
    "watch:main": "node scripts/build.mjs --watch",
    "watch:renderer": "vite dev",
    "build": "npm-run-all --parallel 'rimraf dist' 'rimraf build' --parallel build:*",
    "build:main": "node scripts/build.mjs --prd",
    "build:renderer": "NODE_ENV=production vite build",
    "prepack": "npm run build",
    "pack": "node scripts/pack.mjs",
    "fmt": "prettier --write '**/*.{ts,tsx}'"
  },
  "dependencies": {
    "css.gg": "^2.1.1",
    "electron-store": "^8.1.0",
    "execa": "^8.0.1",
    "extract-file-icon": "^0.3.2",
    "immutability-helper": "^3.1.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron/packager": "^18.1.1",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-beautiful-dnd": "^13.1.7",
    "@types/react-dom": "^18.2.17",
    "@vanilla-extract/css": "^1.14.0",
    "@vanilla-extract/vite-plugin": "^3.9.2",
    "@vitejs/plugin-react": "4.x.x",
    "commander": "^11.1.0",
    "electron": "^28.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.19.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vite": "5.0.12"
  }
}
