{
  "name": "hyper-launcher",
  "description": "Hyper Launcher is future application launcher.",
  "author": "konbu310",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "build:prod": "NODE_ENV=production webpack",
    "watch": "webpack --watch",
    "start": "electron .",
    "pack": "yarn run build:prod && electron-builder"
  },
  "dependencies": {
    "@jxa/run": "^1.3.0",
    "electron-store": "^5.0.0",
    "emotion": "^10.0.17",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-transition-group": "^4.3.0"
  },
  "devDependencies": {
    "@bundle-analyzer/webpack-plugin": "^0.5.0",
    "@jxa/global-type": "^1.3.0",
    "@types/electron": "^1.6.10",
    "@types/electron-load-devtool": "^1.0.1",
    "@types/node": "^12.7.11",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-transition-group": "^4.2.3",
    "@types/webpack": "^4.39.2",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.1.0",
    "electron": "^6.0.11",
    "electron-builder": "^21.2.0",
    "electron-load-devtool": "^1.2.0",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.18.2",
    "ts-config-webpack-plugin": "^1.4.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "build": {
    "appId": "com.electron.hyper-launcher",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "icons/icon.icns",
      "target": [
        "dmg"
      ]
    }
  }
}
