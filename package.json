{
  "name": "hyper-launcher",
  "description": "Flexible and powerful application launcher for macOS.",
  "author": "konbu310",
  "version": "0.1.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "build:prod": "NODE_ENV=production webpack",
    "build:mac": "yarn run build:prod && electron-builder",
    "watch": "webpack --watch",
    "start": "electron ."
  },
  "dependencies": {
    "@jxa/run": "^1.3.2",
    "electron-store": "^5.1.1",
    "emotion": "^10.0.27",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-transition-group": "^4.3.0"
  },
  "devDependencies": {
    "@jxa/global-type": "^1.3.1",
    "@types/electron-load-devtool": "^1.2.0",
    "@types/node": "^13.9.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-transition-group": "^4.2.4",
    "@types/webpack": "^4.41.7",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.2.0",
    "electron": "^8.1.0",
    "electron-builder": "^22.4.0",
    "electron-load-devtool": "^1.2.0",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.19.1",
    "ts-config-webpack-plugin": "^1.4.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "build": {
    "productName": "Hyper Launcher",
    "appId": "com.electron.hyper-launcher",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "icons/icon.icns",
      "target": [
        "dmg"
      ]
    }
  }
}
